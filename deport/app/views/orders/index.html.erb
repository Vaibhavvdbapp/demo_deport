
<style>
  *
  {
    color: black;
    margin: auto;
  }
  table {
    table-layout: fixed;
    width: 90%;
    border-collapse: collapse;
    
  }
  table, th, td {
  border: 3px solid #282;
}
  th
  {
    text-align: center; letter-spacing: 2px;
  }
  td
  {
    text-align: center;  letter-spacing: 1px;
  }
</style>
<table>
  <caption><h1>Listing orders</h1></caption>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th>Action</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= link_to 'Show', order %>  <%= link_to 'Edit', edit_order_path(order) %> <%= link_to 'Destroy', order, :confirm => 'Are you sure?',
      :method => :delete %> </td>
      
  </tr>
  <% end %>
</table>
<br>
<%= link_to 'New Order', new_order_path %>