<%= stylesheet_link_tag "depot", :media => "all" %>  
<style>
    * {
    font-size: medium;
    font-family:Verdana, Geneva, Tahoma, sans-serif;
    letter-spacing: 1px;
}
    table,
    th,
    td {

        border: 1px solid black;
        margin-left: auto;
        margin-right: auto;
        border-collapse: collapse;
        width: 500px;
        text-align: center;
        
    }
</style>

<table>
    <tr>
        <th> ID </th>
        <th> Email </th>
        <th> Sign Up Time </th>
    </tr>
    <%@users.each do |user| %>
    <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td><br>
    </tr>
    <% end %>
</table>